<p style="color: green"><%= notice %></p>

<div class="container-fluid">
  <div class="container">
    <h1 class="text-start mb-3">
      <%= @student.first_name %>
      <span class="fw-bolder">
        <%= @student.last_name%>
      </span>
    </h1>

    <table class="table table-hover">
      <tbody>
        <tr>
          <th>Ustanova</th>
          <td>Univerzitet u Beogradu, Fakultet organizacionih nauka</td>
        </tr>
        <tr>
          <th>Studijski program</th>
          <td><%= @student.program %></td>
        </tr>
        <tr>
          <th>Broj indeksa</th>
          <td><%= @student.br_indeksa%></td>
        </tr>
        <tr>
          <th>Godina upisa</th>
          <td><%= @student.god_upisa%>.</td>
        </tr>
        <tr>
          <th>Godina studija</th>
          <td><%= @student.god_studija%>.</td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= @student.email %></td>
        </tr>
        <tr>
          <th>Način finansiranja</th>
          <td>
              <% if @student.budget %>
              <span style="color: green;">Na teret budžeta</span>
              <% else %>
              <span style="color: red;">Samofinansiranje</span>
              <% end%>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="d-flex justify-content-between">
      <div class="levo d-flex">
        <%= link_to "Izmeni podatke studenta", edit_student_path(@student), class:"btn btn-warning me-2"%>
        <%= button_to "Obriši studenta", @student, method: :delete, class:"btn btn-danger me-2" %>
      </div>
      <%= link_to "Povratak na sve studente", students_path, class:"btn btn-secondary" %>
    </div>
  </div>
</div>





